<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <TextView
        android:id="@+id/app_clear_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Data Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/app_clear_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can export all app data to an external folder and reset the app. This will clear all your preferences, files, and databases."
        android:textSize="16sp"
        android:layout_below="@id/app_clear_title"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_export_and_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export Data and Reset App"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_clear_description" />

</RelativeLayout>
